
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/run_report.schema.json",
  "title": "Agent Run Report",
  "type": "object",
  "required": ["schema", "run_id", "step_id", "agent", "status", "started_at", "ended_at"],
  "properties": {
    "schema": { "const": "run_report@v0" },
    "run_id": { "type": "string" },
    "step_id": { "type": "string" },
    "agent": { "type": "string" },
    "status": { "type": "string", "enum": ["COMPLETED", "FAILED"] },
    "started_at": { "type": "string" },
    "ended_at": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" },
      "description": "File paths or URIs to artifacts produced in this step."
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true
    },
    "logs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "next_suggested_steps": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
